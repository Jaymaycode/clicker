import tkinter as tk

root = tk.Tk()
root.title("The Box")

# Initial score and upgrade variables
score = 0
score_per_click = 1
upgrade_cost = 10

# Function to update score when the box is clicked
def update_score():
    global score
    score += score_per_click
    score_label.config(text="Score: " + str(score))

# Function to purchase an upgrade
def purchase_upgrade():
    global score, score_per_click, upgrade_cost
    if score >= upgrade_cost:
        score -= upgrade_cost
        score_per_click += 1  # Increase score per click with each upgrade
        upgrade_cost *= 2  # Double the cost for the next upgrade
        upgrade_button.config(text=f"Upgrade (Cost: {upgrade_cost})")
        score_label.config(text="Score: " + str(score))

# Clickable box button
box_btn = tk.Button(root, text="ðŸ“¦ Box", command=update_score)
box_btn.pack()

# Score label to display current score
score_label = tk.Label(root, text="Score: 0")
score_label.pack()

# Upgrade button to improve the box's score
upgrade_button = tk.Button(root, text=f"Upgrade (Cost: {upgrade_cost})", command=purchase_upgrade)
upgrade_button.pack()

root.mainloop()
